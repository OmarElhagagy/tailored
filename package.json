{
  "name": "tailors-platform",
  "version": "1.0.0",
  "description": "Tailors Platform Application",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:backend": "cd sewing-platform-backend && npm start",
    "start:client": "cd Tailors-Client && npm run dev",
    "start:admin": "cd app && npm run dev",
    "install:all": "npm install && npm install --prefix sewing-platform-backend && npm install --prefix Tailors-Client && npm install --prefix app",
    "setup": "node setup.js"
  },
  "keywords": [
    "tailors",
    "platform"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
} 